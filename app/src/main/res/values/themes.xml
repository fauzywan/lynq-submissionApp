<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lynq" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondary_color</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primary_color</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
    </style>
    <style name="ScreenBackground"><item name="android:background">@color/primary_color</item></style>
    <style name="CardBackground"><item name="android:background">@color/primary_color</item></style>
    <style name="TextColor"><item name="android:textColor">@color/secondary_color</item></style>
    <style name="ImageChange"><item name="android:src">@color/secondary_color</item></style>
</resources>